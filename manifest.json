{
  "manifest_version": 3,
  "name": "LinguaSpark",
  "version": "1.0.0",
  "description": "Transform any webpage into interactive language lesson material",
  "permissions": ["activeTab", "contextMenus", "storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinguaSpark - Generate Language Lessons"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "_next/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
